
@{
    ViewData["Title"] = "数据监测";
    Layout = "~/Views/Manage/_ManageLayout.cshtml";
}


<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-warning text-white">
            <div class="card-body">
                <h4 class="font-weight-normal mb-3">站内新闻总数</h4>
                <h2 class="font-weight-normal mb-5">$ 15,00000.00</h2>
                <p class="card-text">友商排行 60%</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info text-white">
            <div class="card-body">
                <h4 class="font-weight-normal mb-3">本周动态</h4>
                <h2 class="font-weight-normal mb-5">45633456</h2>
                <p class="card-text">较上周增长  10%</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success text-white">
            <div class="card-body">
                <h4 class="font-weight-normal mb-3">今日访客</h4>
                <h2 class="font-weight-normal mb-5">955741235</h2>
                <p class="card-text">较昨日增长 5%</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sale Overview</h4>
                <canvas id="sales-chart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">活跃度</h4>
                <div class="mt-auto">
                    <canvas id="satisfaction-chart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Updates</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted">
                        <i class="mdi mdi-account icon-sm mr-2"></i>
                        <span>jack Menqu</span>
                    </div>
                    <div class="d-flex align-items-center text-muted">
                        <i class="mdi mdi-calendar-blank icon-sm mr-2"></i>
                        <span>October 3rd, 2018</span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6 pr-1">
                        <img src="~/purple/images/dashboard/img_1.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="~/purple/images/dashboard/img_4.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                    <div class="col-6 pl-1">
                        <img src="~/purple/images/dashboard/img_2.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                        <img src="~/purple/images/dashboard/img_3.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>
                </div>
                <div class="d-flex mt-5 align-items-top">
                    <img src="images/faces/face3.jpg" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <p class="font-weight-bold mr-2 mb-0">Jack Manque</p>
                        <p>
                            This is amazing! We have moved to a brand new office in
                            New Hampshire with a lot more space.
                            We will miss our old office but we are very excited about our new space.
                        </p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

