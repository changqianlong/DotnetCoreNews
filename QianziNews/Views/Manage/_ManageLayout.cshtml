@inject UserManager<ApplicationUser> UserManager


@*@{
    Layout = null;
}*@


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/purple/node_modules/mdi/css/materialdesignicons.min.css">
    <link href="~/purple/node_modules/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/purple/node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.min.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/purple/node_modules/jquery-bar-rating/dist/themes/css-stars.css">
    <link rel="stylesheet" href="~/purple/node_modules/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link href="~/purple/css/style.css" rel="stylesheet" />
    <!-- endinject -->
    <link rel="shortcut icon" href="~/purple/images/favicon.png" />
    @*<link href="~/foreground/css/bootstrap.min.css" rel="stylesheet" />*@


</head>
<body>
    <div class="container-scroller">
        <!-- 头部横栏 -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="index.html"><img src="~/purple/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/purple/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">                       
                <div class="search-field ml-4 d-none d-md-block">
                    <form class="d-flex align-items-stretch h-100" asp-controller="Search" asp-action="Index" method="post">
                            <div class="input-group">
                                <input type="text" class="form-control bg-transparent border-0" placeholder="Search">
                                <div class="input-group-btn">
                                    <button type="button" class="btn bg-transparent dropdown-toggle px-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="mdi mdi-earth"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="#">今日消息</a>
                                        <a class="dropdown-item" href="#">本周消息</a>
                                        <a class="dropdown-item" href="#">本月消息</a>
                                        <div role="separator" class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">一个月或更老消息</a>
                                    </div>
                                </div>
                                <div class="input-group-addon bg-transparent border-0 search-button">
                                    <button type="submit" class="btn btn-sm bg-transparent px-0">
                                        <i class="mdi mdi-magnify"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
</div>


                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-email-outline"></i>
                            <span class="count"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                            <h6 class="p-3 mb-0">消息</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="images/faces/face4.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">小汤 给你发来消息</h6>
                                    <p class="text-gray mb-0">
                                        一分钟之前
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="~/purple/images/faces/face2.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">小焦 给你发来消息</h6>
                                    <p class="text-gray mb-0">
                                        15 分钟之前
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="~/purple/images/faces/face3.jpg" alt="image" class="profile-pic">
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">大兵 给你发来消息</h6>
                                    <p class="text-gray mb-0">
                                        18 分钟之前
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="p-3 mb-0 text-center">4 条新消息</h6>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                            <i class="mdi mdi-bell-outline"></i>
                            <span class="count"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                            <h6 class="p-3 mb-0">通知</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-success">
                                        <i class="mdi mdi-calendar"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">日程</h6>
                                    <p class="text-gray ellipsis mb-0">
                                        Just a reminder that you have an event today
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-warning">
                                        <i class="mdi mdi-settings"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">设置</h6>
                                    <p class="text-gray ellipsis mb-0">
                                        更新主页
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-info">
                                        <i class="mdi mdi-link-variant"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">启动管理</h6>
                                    <p class="text-gray ellipsis mb-0">
                                        新成员哇！
                                    </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="p-3 mb-0 text-center">查看所有通知</h6>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle nav-profile" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <img src="~/purple/images/faces/face.png" alt="image">
                            <span class="d-none d-lg-inline">你好 @UserManager.GetUserName(User)</span>
                        </a>
                        <div class="dropdown-menu navbar-dropdown w-100" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached mr-2 text-success"></i>
                                登录记录
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-logout mr-2 text-primary"></i>
                                退出
                            </a>
                        </div>
                    </li>
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>




        <!-- 页面内容 -->
        <div class="container-fluid page-body-wrapper">
            <div class="row row-offcanvas row-offcanvas-right">
                <!-- 左侧栏 -->
                <nav class="sidebar sidebar-offcanvas" id="sidebar">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="account" asp-action="default">
                                <span class="menu-title">数据监测</span>
                                <span class="menu-sub-title">( 2 new updates )</span>
                                <i class="mdi mdi-home menu-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                                <span class="menu-title">新闻管理</span>
                                <i class="menu-arrow"></i>
                                <i class="mdi mdi-crosshairs-gps menu-icon"></i>
                            </a>
                            <div class="collapse" id="ui-basic">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a asp-controller="news" asp-action="addnews" class="nav-link">添加新闻</a></li>
                                    <li class="nav-item"> <a asp-controller="news" asp-action="editnews" class="nav-link">修改新闻</a></li>
                                    <li class="nav-item"> <a asp-controller="news" asp-action="delnews" class="nav-link">全部删除</a></li>
                                </ul>
                            </div>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link" href="pages/icons/font-awesome.html">
                                <span class="menu-title">图标库</span>
                                <i class="mdi mdi-contacts menu-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="pages/forms/basic_elements.html">
                                <span class="menu-title">表单库</span>
                                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="pages/charts/chartjs.html">
                                <span class="menu-title">新闻数据预览</span>
                                <i class="mdi mdi-chart-bar menu-icon"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#auth" aria-expanded="false" aria-controls="auth">
                                <span class="menu-title">用户管理</span>
                                <i class="menu-arrow"></i>
                                <i class="mdi mdi-lock menu-icon"></i>
                            </a>
                            <div class="collapse" id="auth">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a asp-controller="manage" asp-action="SetPassword" class="nav-link"> 设置密码 </a></li>
                                    <li class="nav-item"> <a asp-controller="manage" asp-action="ChangePassword" class="nav-link"> 修改密码 </a></li>
                                    <li class="nav-item"> <a asp-controller="manage" asp-action="TwoFactorAuthentication" class="nav-link"> 二步验证 </a></li>
                                    <li class="nav-item"> <a asp-controller="manage" asp-action="ExternalLogins" class="nav-link"> 外部登录 </a></li>
                                    <li class="nav-item"> <a class="nav-link" href="pages/samples/error-404.html"> 404 </a></li>
                                    <li class="nav-item"> <a class="nav-link" href="pages/samples/error-500.html"> 500 </a></li>
                                </ul>
                            </div>
                        </li>
                        <!--技术支持-->
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#technology" aria-expanded="false" aria-controls="auth">
                                <span class="menu-title">技术支持</span>
                                <i class="menu-arrow"></i>
                                <i class="mdi mdi-lock menu-icon"></i>
                            </a>
                            <div class="collapse" id="technology">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a href="https://www.cnblogs.com/qzdd/" class="nav-link"> 博客园 </a></li>
                                    <li class="nav-item"> <a class="nav-link" href="https://me.csdn.net/qq_43542583"> CSDN </a></li>
                                    <li class="nav-item"> <a class="nav-link" href="https://github.com/changqianlong"> GitHub </a></li>
                                </ul>
                            </div>
                        </li>

                    </ul>
                    <div class="sidebar-progress">
                        <p>Total Sales</p>
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p>50 Items sold</p>
                    </div>
                    <div class="sidebar-progress">
                        <p>Customer Target</p>
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-gradient-primary" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p>200 Items sold</p>
                    </div>
                </nav>

                <!-- 内容 -->
                <div class="content-wrapper">


                    @RenderBody()



                </div>

                <!-- content-wrapper ends -->
                <!-- footer -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright &copy; 2020.乾子<a target="_blank" href="https://www.cnblogs.com/qzdd/">博客地址</a></span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"></span>
                    </div>
                </footer>
                <!-- partial -->


            </div>
            <!-- row-offcanvas ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/purple/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/purple/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/purple/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/purple/node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/purple/node_modules/chart.js/dist/Chart.min.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/purple/js/off-canvas.js"></script>
    <script src="~/purple/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/purple/js/dashboard.js"></script>
    <!-- End custom js for this page-->
    @section Scripts {
        @RenderSection("Scripts", required: false)
    }
</body>

</html>


