@using Microsoft.AspNetCore.Identity
@using QianziNews.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav navbar-nav pull-right">
        <ul class="nav navbar-nav pull-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">你好 @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">注销</button>
            </li>
            @*<li><a asp-controller="News" asp-action="Index">新闻管理</a></li>*@
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">注册</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">登录</a></li>
    </ul>
}
